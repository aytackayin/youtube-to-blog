{
    "manifest_version": 3,
    "name": "Touch YouTube to Blog",
    "version": "1.0.0",
    "description": "YouTube videolar覺n覺 tek t覺kla Filament CMS'e blog olarak aktar覺r.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "youtube.png"
    },
    "icons": {
        "16": "youtube.png",
        "32": "youtube.png",
        "48": "youtube.png",
        "128": "youtube.png"
    }
}